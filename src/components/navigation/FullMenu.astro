            <ul>
                <UploadWindow client:load/>
                <!-- <li><a href="/CreateCategory">Create Category/Collection</a></li> -->
                <li><a href="/CreateFrame">Create Border/Frame</a></li>
            </ul>
        </div>
        <div>
            <h3  >Info</h3>
            <ul>
                <li><a href="">Contact</a></li>
               <li class="flex flex-wrap items-center gap-4 text-[24px]">
                     <a href="https://www.instagram.com/developedbytim/" target="_blank" class="fa fa-instagram"></a>
                        <a href="https://www.facebook.com/timur.muedinov.9" target="_blank" class="fa fa-facebook"></a>
                        <a href="https://www.youtube.com/channel/UConQOmFJoqkLsz7pBqtapIw/" target="_blank" class="fa fa-youtube"></a>
